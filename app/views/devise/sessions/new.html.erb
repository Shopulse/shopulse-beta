<%= stylesheet_link_tag 'sessions/create' %>

<table width="100%" height="70%">
	<tr>
		<td>
			<div id='login_form' height="100%" width='100%'>
				<h2>Sign in</h2>
				<%= form_for resource, :as => resource_name, :url => session_path(resource_name) do |f| %>
				<div>
					<%= f.email_field :email, :autofocus => true, :placeholder => 'me@address.com' %>
				</div>

				<div>
					<%= f.password_field :password, :placeholder => 'password' %>
				</div>

				<div>
					<%= f.submit "Log In", :class => 'btn btn-danger', :id => 'login_button' %>
				</div>
				<% end %>
				<%= render "devise/shared/links" %>		
			</div>
		</td>
	</tr>
</table>