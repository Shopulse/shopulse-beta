<%= stylesheet_link_tag "product/uncomplete" %>
<br>
<center>
<div class='panel'>
	<h2>Complete Your Products</h2>
	<br>
	<table class="table table-striped">
	<thead>
		<tr>
			<% if @admin == true %>
			<th>Retailer</th>
			<% end %>
			<th>name</th>			
			<th>created_at</th>
			<th><%=t '.actions', :default => t("helpers.actions") %></th>
		</tr>
	</thead>
	<tbody>
		<% @products = [] if @products == nil %>
		<% @products.each do |product| %>
		<tr>
			<% if @admin %>
			<% retailer = UserInfo.find(product.user_info_id) %>
			<td><%= link_to retailer.name, :action => "retailer", :id => retailer.id %></td>
			<% end %>

			<% if product.name.length > 0 %>
			<td><%= link_to product.name, product_path(product), :target => "_blank" %></td>
			<% else %>
			<td><%= link_to "-", product_path(product), :target => "_blank" %></td>
			<% end %>

			<td><%= product.created_at.strftime "%Y-%m-%d %H:%M:%S" %></td>
			<td>
				<%= link_to t('.edit', :default => t("helpers.links.edit")),
				edit_product_path(product), :class => 'btn btn-mini' %>
				<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
				product_path(product),
				:method => :delete,
				:data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
				:class => 'btn btn-mini btn-danger' %>
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
</center>