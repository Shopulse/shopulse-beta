<%= javascript_include_tag 'product/new' %>
<%= stylesheet_link_tag "product/new" %>

<%= form_for @product, :html => { :class => 'form-horizontal', :onsubmit => 'submit();'} do |f| %> 
<div class="span6">

  <div class="row-fluid">
    <div class="span3">Basic Information</div>
    <div class="span8">
      <div class="control-group">  
        <%= f.label :name, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :name, :class => 'text_field', :placeholder => "name", :required => true %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :brand, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :brand, :class => 'text_field', :placeholder => 'Brand', :required => true %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :description, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_area :description, :class => 'text_area', :rows => 5, :placeholder => 'Description', :required => true %>
        </div>
      </div>
    </div>
    <div class="control-group" style='float: right'>
      <%= f.label :images, :class => 'control-label' %>
      <div class="controls">
        <%= f.file_field :images, :multiple => 'true', :onchange => 'fileList()' %>
        <table class='table' id='file_list' style="width: 220px;">
          <tr>
            <td>#</td>
            <td>name</td>
          </tr>
        </table>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span3">Price Details</div>
    <div class="span8">
      <div class="control-group">
        <%= f.label :price, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :price, :class => 'number_field', :html => {'step' => 'any'}, :placeholder => '0.00', :required => true %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :sale_price, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :sale_price, :class => 'number_field', :html => {'step' => 'any'}, :placeholder => '0.00', :required => true %>
        </div>
      </div>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span3">Product Details</div>
    <div class="span8">
      <div class="control-group">
        <%= f.label :gender, :class => 'control-label' %>
        <div class="controls">
          <%= f.hidden_field :gender %>
          <div id='gender_checkbox' class="btn-group" data-toggle="buttons-checkbox">
            <button type="button" class="btn" id='men' onclick='gender_select()'>Men</button>
            <button type="button" class="btn" id='women' onclick='gender_select()'>Women</button>
          </div>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :material, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :material, :class => 'text_field', :rows => 1, :placeholder => 'split by comma', :required => true %>
        </div>
      </div>
      <div class="control-group">
        <label class='control-label'>Available Sizes</label>
        <div class="controls">
          <%= f.hidden_field :sizes, :required => true %>    
          <div class="input-append">
            <input id='size_list' type='text' class='text_field span11' placeholder="XS, M, L, 7, 9.5" onchange="size_list_change()" />
            <button class="btn" type="button" onclick="size_list_change()"><i class="icon-arrow-down"></i></button>
          </div>
        </div>
      </div>
      <div class="control-group">
        <label class='control-label'>Size Quantities</label>
        <div class="controls">
          <table class='table' id='size_table' style="width: 220px;">
            <tr>
              <td>Size</td>
              <td>Quantity</td>
            </tr>            
          </table>
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
    products_path, :class => 'btn' %>
  </div>
</div>
<div class="span1"></div>
<% end %>
