<%= stylesheet_link_tag "product/uncomplete" %>
<br>
<center>
<div class='panel'>
	<h2>Complete Your Products</h2>
	<br>
	<table class="table table-striped">
	<tbody>
		<% @products = [] if @products == nil %>
		<% @products.each do |product| %>
		<tr>
			<td><%= image_tag product.photos.first.photo.url :thumb if product.photos.first %></td>

			<% if product.name.length > 0 %>
				<td><%= link_to product.name, edit_product_path(product) %></td>
			<% else %>
				<td><%= link_to "No Name", edit_product_path(product) %></td>
			<% end %>
			
			<td>
				<%= link_to 'edit', edit_product_path(product), :class => 'btn btn-mini' %>				
			</td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>
<br>
<a href="/">continue to main page</a>
</center>